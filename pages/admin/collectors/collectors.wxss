.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 搜索框 */
.search-box {
  background: #fff;
  padding: 20rpx 30rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-box input {
  background: #f5f5f5;
  height: 72rpx;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

/* 回收人员列表 */
.collector-list {
  padding: 20rpx;
}

.collector-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.collector-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.info {
  flex: 1;
}

.name {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 6rpx;
}

.phone {
  font-size: 26rpx;
  color: #999;
}

.status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.status.active {
  background: #e8f5e9;
  color: #07c160;
}

.status.disabled {
  background: #ffebee;
  color: #ff4d4f;
}

/* 回收人员统计 */
.collector-stats {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.stat-item {
  text-align: center;
}

.stat-item .label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 6rpx;
}

.stat-item .value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

/* 操作按钮 */
.actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  gap: 20rpx;
}

.btn {
  font-size: 26rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  background: #f5f5f5;
  color: #666;
  border: none;
}

.btn.default {
  background: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

.btn.danger {
  background: #ff4d4f;
  color: #fff;
}

.btn.success {
  background: #07c160;
  color: #fff;
}

/* 加载状态 */
.loading,
.no-more,
.empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
} 