.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 加载状态 */
.loading {
  padding: 40rpx;
  text-align: center;
  color: #999;
}

.empty {
  padding: 100rpx 40rpx;
  text-align: center;
  color: #999;
}

/* 订单状态 */
.status-section {
  background: #07c160;
  color: #fff;
}

.status-info {
  margin-bottom: 20rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.status-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

.order-time {
  font-size: 24rpx;
  opacity: 0.8;
}

.order-time text {
  display: block;
  margin-bottom: 6rpx;
}

/* 内容区块 */
.section {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

/* 信息列表 */
.info-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-item .label {
  color: #666;
  font-size: 28rpx;
}

.info-item .value {
  color: #333;
  font-size: 28rpx;
}

.info-item .price {
  color: #07c160;
  font-weight: bold;
}

/* 用户信息 */
.user-info,
.collector-info {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-detail,
.collector-detail {
  flex: 1;
}

.nickname {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 6rpx;
  display: block;
}

.phone {
  font-size: 26rpx;
  color: #666;
}

.action-btn {
  padding: 20rpx;
}

.action-btn .iconfont {
  font-size: 40rpx;
  color: #07c160;
}

/* 回收物品列表 */
.items-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.item {
  display: flex;
  gap: 20rpx;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.item-detail {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.item-detail text {
  font-size: 26rpx;
  color: #666;
}

/* 地址信息 */
.address-info {
  display: flex;
  align-items: flex-start;
}

.address-detail {
  flex: 1;
}

.address-detail .name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 6rpx;
  display: block;
}

.address-detail .phone {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 6rpx;
  display: block;
}

.address-detail .address {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 备注信息 */
.remark-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 按钮 */
.btn {
  margin-top: 30rpx;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  text-align: center;
}

.btn.default {
  background: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

/* 时间线 */
.timeline {
  position: relative;
  padding-left: 40rpx;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 16rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: #eee;
}

.timeline-item {
  position: relative;
  padding-bottom: 40rpx;
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: -44rpx;
  top: 0;
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background: #ddd;
  border: 4rpx solid #fff;
}

.timeline-item.active::before {
  background: #07c160;
}

.timeline-item .time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.timeline-item .content {
  font-size: 28rpx;
  color: #333;
}

.timeline-item:last-child {
  padding-bottom: 0;
} 