<view class="container">
  <view class="logo-container">
    <image class="logo" src="/images/logo.png" mode="aspectFit"></image>
    <text class="title">管理员登录</text>
  </view>

  <view class="form-container">
    <view class="form">
      <view class="input-group">
        <input class="input" type="text" placeholder="管理员账号" bindinput="onUsernameInput" value="{{username}}" />
      </view>
      <view class="input-group">
        <input class="input" type="password" placeholder="密码" bindinput="onPasswordInput" value="{{password}}" />
      </view>
      <button class="submit-btn" bindtap="handleLogin">登录</button>
      <view class="back-to-user" bindtap="backToUserLogin">返回用户登录</view>
    </view>
  </view>
</view> 