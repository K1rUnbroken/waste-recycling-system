.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 120rpx;
}

/* 状态区域 */
.status-section {
  background: #07c160;
  padding: 40rpx 30rpx;
  color: #fff;
}

.status-info {
  margin-bottom: 40rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.status-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

.status-progress {
  display: flex;
  justify-content: space-between;
  position: relative;
}

.status-progress::before {
  content: '';
  position: absolute;
  top: 15rpx;
  left: 0;
  right: 0;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.3);
  z-index: 1;
}

.progress-item {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.progress-item .dot {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  margin-bottom: 10rpx;
}

.progress-item.active .dot {
  background: #fff;
}

.progress-item text {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 内容区域 */
.section {
  background: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.value.price {
  color: #ff6b6b;
  font-weight: bold;
}

/* 底部操作栏 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: flex-end;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.btn {
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border-radius: 44rpx;
  background: #f5f5f5;
  color: #666;
  border: none;
  margin-left: 20rpx;
}

.btn.primary {
  background: #07c160;
  color: #fff;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-body {
  padding: 30rpx;
}

.modal-body .form-item {
  margin-bottom: 20rpx;
}

.modal-body .form-item:last-child {
  margin-bottom: 0;
}

.modal-body input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}

.modal-footer {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #eee;
} 