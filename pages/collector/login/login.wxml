<view class="container">
  <view class="header">
    <text class="title">回收人员登录</text>
  </view>

  <view class="form">
    <view class="form-item">
      <text class="label">手机号</text>
      <input type="number" 
             value="{{phone}}"
             placeholder="请输入手机号" 
             bindinput="inputPhone"/>
    </view>
    <view class="form-item">
      <text class="label">密码</text>
      <input type="password" 
             value="{{password}}"
             placeholder="请输入密码" 
             bindinput="inputPassword"/>
    </view>
  </view>

  <button class="submit-btn" bindtap="login">登录</button>

  <view class="tips">
    <text>默认账号：13800138000</text>
    <text>默认密码：123456</text>
  </view>
</view> 