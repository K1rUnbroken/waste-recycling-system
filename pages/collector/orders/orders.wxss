.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 标签栏样式 */
.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  padding: 20rpx 0;
}

.tab-item.active {
  color: #07c160;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

/* 订单列表样式 */
.order-list {
  padding: 20rpx;
}

.order-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.order-no {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 24rpx;
}

.order-status.pending {
  color: #ff9800;
}

.order-status.accepted {
  color: #2196f3;
}

.order-status.completed {
  color: #07c160;
}

.order-content {
  display: flex;
  margin-bottom: 20rpx;
}

.category-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
}

.category-info image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.category-info text {
  font-size: 24rpx;
  color: #666;
}

.order-info {
  flex: 1;
}

.info-item {
  margin-bottom: 10rpx;
}

.info-item .label {
  font-size: 26rpx;
  color: #999;
}

.info-item .value {
  font-size: 26rpx;
  color: #333;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.price {
  font-size: 26rpx;
  color: #666;
}

.price .amount {
  color: #ff6b6b;
  font-size: 32rpx;
  font-weight: bold;
}

.actions {
  display: flex;
  gap: 20rpx;
}

.btn {
  font-size: 26rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  background: #f5f5f5;
  color: #666;
  border: none;
}

.btn.primary {
  background: #07c160;
  color: #fff;
}

.btn.default {
  background: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

/* 加载状态样式 */
.loading,
.no-more,
.empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
} 