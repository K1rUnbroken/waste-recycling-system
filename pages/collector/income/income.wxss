.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 月份选择器 */
.month-selector {
  background: #fff;
  padding: 30rpx;
  text-align: center;
}

.picker {
  display: inline-flex;
  align-items: center;
  font-size: 32rpx;
  color: #333;
}

.picker .icon {
  font-size: 24rpx;
  margin-left: 10rpx;
  color: #999;
}

/* 收益概览 */
.overview {
  display: flex;
  background: #07c160;
  padding: 40rpx 30rpx;
  color: #fff;
}

.overview-item {
  flex: 1;
  text-align: center;
}

.overview-item .label {
  font-size: 26rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 10rpx;
}

.overview-item .value {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
}

/* 内容区域 */
.section {
  background: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

/* 收益明细列表 */
.income-list {
  margin-top: 20rpx;
}

.income-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.income-item:last-child {
  border-bottom: none;
}

.order-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.order-no {
  font-size: 24rpx;
  color: #999;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.income-info {
  display: flex;
  flex-wrap: wrap;
}

.info-item {
  width: 50%;
  margin-bottom: 10rpx;
}

.info-item .label {
  font-size: 26rpx;
  color: #999;
  display: block;
}

.info-item .value {
  font-size: 26rpx;
  color: #333;
  display: block;
}

.info-item .value.price {
  color: #ff6b6b;
  font-weight: bold;
}

/* 加载状态 */
.loading,
.no-more,
.empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
}

/* 提现按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.withdraw-btn {
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 40rpx;
  text-align: center;
} 