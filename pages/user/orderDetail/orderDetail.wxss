.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 20rpx;
}

.order-detail {
  padding-bottom: 40rpx;
}

.section {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.status {
  color: #07c160;
}

.status.pending {
  color: #ff9800;
}

.btn-group {
  margin-top: 40rpx;
  padding: 0 30rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #fff;
  border: 1rpx solid #ddd;
  color: #666;
  font-size: 30rpx;
  border-radius: 44rpx;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

/* 状态区域 */
.status-section {
  background: #07c160;
  padding: 40rpx 30rpx;
  color: #fff;
}

.status-info {
  margin-bottom: 40rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.status-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

.status-progress {
  display: flex;
  justify-content: space-between;
  position: relative;
}

.status-progress::before {
  content: '';
  position: absolute;
  top: 15rpx;
  left: 0;
  right: 0;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.3);
  z-index: 1;
}

.progress-item {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.progress-item .dot {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  margin-bottom: 10rpx;
}

.progress-item.active .dot {
  background: #fff;
}

.progress-item text {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 内容区域 */
.section {
  background: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
}

.info-list {
  margin-top: 20rpx;
}

.info-item .value.price {
  color: #ff6b6b;
  font-weight: bold;
}

.value-wrapper {
  display: flex;
  align-items: center;
}

.copy {
  font-size: 24rpx;
  color: #07c160;
  margin-left: 20rpx;
}

/* 废品类别信息 */
.category-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.category-info image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.category-info text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

/* 回收人员信息 */
.collector-info {
  display: flex;
  align-items: center;
}

.collector-info .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.collector-info .info {
  flex: 1;
}

.collector-info .name {
  font-size: 30rpx;
  color: #333;
  display: block;
  margin-bottom: 6rpx;
}

.collector-info .phone {
  font-size: 26rpx;
  color: #999;
}

.contact-btn {
  font-size: 26rpx;
  color: #07c160;
  background: none;
  border: 1rpx solid #07c160;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

/* 底部操作栏 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: flex-end;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.btn.primary {
  background: #07c160;
  color: #fff;
}

.btn.cancel {
  background: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

/* 评价相关样式 */
.stars {
  display: flex;
  align-items: center;
}

.star-item {
  display: inline-block;
  margin: 0 10rpx;
  position: relative;
}

.star-wrapper {
  position: relative;
  display: inline-block;
}

.star-value {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
  z-index: 2;
}

.rating-text {
  text-align: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.rating-stars {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.comment-input {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.rating-info {
  margin-bottom: 20rpx;
  padding: 15rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.value.comment {
  text-align: left;
  margin-top: 10rpx;
  padding: 10rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  word-break: break-all;
}

/* 评价弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1001;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  z-index: 1002;
  position: relative;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  display: block;
}

.star-large {
  width: 60rpx;
  height: 60rpx;
  margin: 0 10rpx;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
}

.modal-footer .btn {
  flex: 1;
  margin: 0 10rpx;
}

.star-small-wrapper {
  position: relative;
  display: inline-block;
  margin-right: 10rpx;
}

.star-small-value {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 18rpx;
  color: #333;
  font-weight: bold;
  z-index: 2;
} 