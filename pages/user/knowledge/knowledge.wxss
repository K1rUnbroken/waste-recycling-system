.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 20rpx;
}

.article-list {
  padding-bottom: 40rpx;
}

.article-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.article-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.article-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.article-footer {
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.article-time {
  font-size: 24rpx;
  color: #999;
} 