.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 20rpx;
}

/* 标签栏样式 */
.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  padding: 20rpx 0;
}

.tab-item.active {
  color: #07c160;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

/* 订单列表样式 */
.order-list {
  padding-bottom: 40rpx;
}

.order-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.order-id {
  font-size: 28rpx;
  color: #666;
}

.order-status {
  font-size: 28rpx;
  color: #07c160;
}

.order-status.pending {
  color: #ff9800;
}

.order-content {
  margin-bottom: 20rpx;
}

.order-info {
  display: flex;
  margin-bottom: 10rpx;
}

.order-info:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 140rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.create-time {
  font-size: 24rpx;
  color: #999;
}

.btn-group {
  display: flex;
  gap: 20rpx;
}

.btn {
  font-size: 26rpx;
  padding: 12rpx 30rpx;
  border-radius: 44rpx;
  background: #f5f5f5;
  color: #666;
  border: none;
  line-height: 1.5;
}

.btn.primary {
  background: #07c160;
  color: #fff;
}

.btn.cancel {
  background: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

/* 加载状态样式 */
.loading,
.no-more,
.empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
} 